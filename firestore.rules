rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read all user profiles but only write to their own.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Authenticated users can see all player locations
    // but can only create or update their own location.
    match /locations/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
